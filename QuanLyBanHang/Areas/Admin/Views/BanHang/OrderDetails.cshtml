
@{
    var IDetails = ViewBag.IDetails as IEnumerable<QuanLyBanHang.Models.ChiTietHoaDon>;
    var Invoice = ViewBag.Invoice as IEnumerable<QuanLyBanHang.Models.HoaDon>;
}
@{
    ViewBag.Title = "OrderDetails";
}


<div class="container">
    <h2>Tạo thành công!</h2>
    <div class="row" style="margin-top:25px">
        <div class="col-md-6">
            @foreach (var item in Invoice)
            {

                <div>Tên khách hàng :<b>@item.KhachHang.TenKhachHang</b></div>
                <div>Số điện thoại :<b>@item.KhachHang.DienThoai</b></div>
                <div>Địa chỉ :<b>@item.KhachHang.DiaChi</b></div>
                <div>Email :<b>@item.KhachHang.Email</b></div>
                <div>Ngày tạo:<b> @item.CreatedDate</b></div>
                <div>Trạng thái: <b>@item.TrangThai</b></div>
         
            }
        </div>
        <div class="col-md-6">
            @foreach (var item in Invoice)
            {
                <div>Người nhận hàng : <b>@item.ShipName</b></div>
                <div>Địa chỉ nhận hàng : <b>@item.ShipAddress</b></div>
                <div>SDT nhận hàng : <b>@item.ShipMobile</b></div>
                <div>Email nhận hàng : <b>@item.ShipEmail</b></div>
            }

        </div>
    </div>
    <div style="margin-top:25px">
        <table class="table">
            <thead>
                <tr style="background-color:seashell">
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in IDetails)
                {
                    <tr>
                        <td>@item.ID_SP</td>
                        <td>@item.HangHoa.TenHang</td>
                        <td>@item.SoLuong</td>
                        <td>@item.Gia</td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="row" style="margin-top:45px">
            <div class="col-6">
                <a href="~/Admin/HomeAdmin/Index" class=" btn-success btn-lg">
                    <i class="bi bi-backspace-fill"></i> Quay về trang chủ
                </a>
            </div>
            <div class="pull-right col-6">
                <h3 class="text-danger">Tổng tiền: </h3>
                <h3 class="text-warning"><b>@ViewBag.Total vnđ</b></h3>
            </div>
        </div>
    </div>
</div>