
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>

    <div class="wrapper">
        <form action="~/Login/Register" method="post" class="login">
            <p class="title">Đăng ký</p>
            <input type="text" value="@ViewBag.username" placeholder="Username" autofocus required name="UserName" />
            <i class="fa fa-user"></i>
            <input type="password" value="@ViewBag.password" placeholder="Password" required name="PassWord" />
            <i class="fa fa-key"></i>
            <input type="password" value="@ViewBag.repassword" placeholder="re-Password" required name="rePassWord" />
            <i class="fa fa-key"></i>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger text-center"><p style="color:red">@ViewBag.ErrorMessage</p></div>
            }
            <a href="~/Login/Index" style="text-decoration:none" class="pull-right"><p>Quay lại đăng nhập</p></a>
            <button type="submit">
                <span class="state">Đăng ký</span>
            </button>
        </form>

    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
</body>
</html>
