@model QuanLyBanHang.Models.HangHoa
@{
    ViewBag.Title = @Model.TenHang;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Upload/Product/@Model.HinhAnh" class="img-fluid" style="width:500px;" alt="Hình ảnh sản phẩm">
        </div>
        <div class="col-md-6">
            <h2 class="text-info">@Model.TenHang</h2>
            <h4>Thương hiệu:<b> @ViewBag.ThuongHieu</b></h4>
            <h4>Giá bán: <b> @Model.GiaBan ₫ </b></h4>
            <h4>Mô tả: <br />@Model.GhiChu </h4>
            <a href="/Cart/AddItem?productId=@Model.ID&quantity=1" class="adtocart btn-danger pull-right" style="margin-top:30px;padding:18px;border-radius:10px">

                <i class="glyphicon glyphicon-shopping-cart"></i>
                Đặt hàng ngay
            </a>
        </div>
    </div>
</div>


