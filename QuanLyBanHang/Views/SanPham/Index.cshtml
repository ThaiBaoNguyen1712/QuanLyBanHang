
@{
    ViewBag.Title = "Index";
}

<div class="container" style="margin-top:20px">
    <div class="row">
        @if (ViewBag.SearchResult != null && ((List<QuanLyBanHang.Models.HangHoa>)ViewBag.SearchResult).Any())
        {
            <h3> Hiển thị kết quả từ tìm kiếm @ViewBag.Search</h3>
            foreach (var item in ViewBag.SearchResult)
            {
                <div class="col-md-3" style="padding: 30px;">
                    <div class="card" style="width: 18rem; background-color: white;">
                        <a href="~/SanPham/Detail/@item.ID">
                            <img src="~/Upload/Product/@item.HinhAnh" style="width: 200px; height: 200px;" class="card-img-top img-responsive" alt="Hình ảnh sản phẩm">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title" style="font-size: 18px;">@item.TenHang</h5>
                            <p class="card-text" style="font-size: 16px; color: red;">@item.GiaBan ₫</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h3>Không tìm thấy kết quả từ @ViewBag.Search</h3>
        }
    </div>
</div>






