<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: deepskyblue; border: none;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">
                    <img src="~/Upload/MyWeb/Logo-KiotViet.png" style="height:auto;width:100px" alt="Logo" class="logo-image">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color: white !important;">
                        <a href="~/Home/Index" style="color: white !important; text-decoration: none !important;">Trang chủ</a>
                    </li>
                    <li style="color: white !important;">
                        <a href="~/Home/About" style="color: white !important;">Về chúng tôi</a>
                    </li>
                    <li style="color: white !important;">
                        <a href="~/Admin/Home/Contact" class="dropdown-toggle" data-toggle="dropdown" style="color: white !important;">
                            <i class="bi bi-list"></i>  Sản phẩm
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="~/SanPham/MayBo">Máy bộ</a>
                            </li>
                            <li><a href="~/SanPham/Laptop">Laptop</a></li>
                            <li><a href="~/SanPham/PhuKien">Phụ kiện</a></li>
                            <li><a href="~/SanPham/Combo">Combo</a></li>
                            <li><a href="~/SanPham/LikeNew">Like new</a></li>
                            <li><a href="~/SanPham/Old">Hàng cũ</a></li>
                        </ul>

                    </li>

                    <form class="navbar-form navbar-left" action="/SanPham/Index" method="post">
                        <div class="form-group">
                            <input type="text" name="Search" id="Search" class="form-control" placeholder="Bạn cần tìm gì">
                        </div>
                        <button type="submit" class="btn btn-default"><i class="bi bi-search"></i></button>
                    </form>

                </ul>



                @if (Session["USER_SESSION"] == null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li style="color: white !important;">
                            <a href="~/Login/Index" style="color: white !important;"><i class="bi bi-box-arrow-in-left"></i> Đăng nhập</a>
                  
                        </li>
                     
                        <li style="color: white !important;">
                            <a href="~/Login/Register" style="color: white !important;"><i class="bi bi-person-plus-fill"></i> Đăng ký</a>
                        </li>
                    </ul>
                }
                else
                {

                    <ul class="nav navbar-nav navbar-right">
                        <li class=" navbar-right">
                            <a href="~/Admin/HomeAdmin/Contact" class="dropdown-toggle " data-toggle="dropdown" style="color: white !important;">
                                <i class="bi bi-person-lines-fill"></i> Tài khoản
                            </a>

                            <ul class="dropdown-menu">
                                <li><a href="~/MyInvoice/Index"><i class="bi bi-receipt"></i> Đơn hàng</a></li>
                                <li><a href="~/CreateCus/Update"><i class="bi bi-person-circle"></i> Thông tin tài khoản</a></li>
                                <li><a href="~/Login/ChangePassWord"><i class="bi bi-wrench-adjustable-circle-fill"></i> Đổi mật khẩu</a></li>
                                <li><a href="~/Login/SignOut"><i class="bi bi-box-arrow-left"></i> Đăng xuất</a></li>

                            </ul>

                        </li>
                    </ul>

                }
                <ul class="nav navbar-nav navbar-right">
                    <li class="pull-right">
                        <a href="~/Cart/Index" style="color: orangered !important;"><i class="bi bi-cart-fill"> Giỏ hàng</i></a>
                    </li>
                </ul>

            </div>
                </div>
    </div>



    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
